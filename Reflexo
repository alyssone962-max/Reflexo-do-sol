-- [[ RAIOS SOLARES E BRILHO SUAVE (REFLEXO DIMINUÍDO) ]] --

local Lighting = game:GetService("Lighting")

-- === CONFIGURAÇÕES GERAIS E HORA (MANTIDAS) ===
Lighting.Technology = Enum.Technology.Future 
Lighting.GlobalShadows = true 
Lighting.TimeOfDay = "12:00:00" -- Meio-dia
Lighting.Brightness = 3.0 
Lighting.Ambient = Color3.fromRGB(50, 50, 50) 

-- === 1. EFEITO RAIOS SOLARES (SUNRAYS EFFECT) ===

local sunRays = Lighting:FindFirstChildOfClass("SunRaysEffect")
if not sunRays then
    sunRays = Instance.new("SunRaysEffect")
    sunRays.Parent = Lighting
end

-- Propriedades do SunRays: INTENSIDADE DIMINUÍDA (de 0.5 para 0.2)
sunRays.Intensity = 0.2   
sunRays.Spread = 1.0      

-- === 2. CONFIGURAÇÕES DE BRILHO/BLOOM MÁXIMO (REFLEXO DIMINUÍDO) ===

local bloom = Lighting:FindFirstChildOfClass("BloomEffect")
if not bloom then
    bloom = Instance.new("BloomEffect")
    bloom.Parent = Lighting
end

-- Propriedades do Bloom: INTENSIDADE DIMINUÍDA (de 1.0 para 0.4)
bloom.Intensity = 0.4   
bloom.Size = 70         
bloom.Threshold = 0.7   

-- === 3. REFLEXO NA SUPERFÍCIE (Specular Scale) ===
-- Mantemos em 1.0, mas a redução do Bloom e SunRays já diminui o reflexo percebido.
local reflection = Lighting:FindFirstChildOfClass("EnvironmentalSpecularScale")
if not reflection then
    reflection = Instance.new("EnvironmentalSpecularScale")
    reflection.Parent = Lighting
end

reflection.Value = 1.0 

print("✨ Reflexo Solar Suavizado: Intensidade do Bloom reduzida para 0.4 e SunRays para 0.2.")
